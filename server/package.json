{
    "name": "tandf-pyramid-oadashboard-server-v1",
    "description": "The Pyramid is a T&F project with the goal of creating a single platform that allows customers and consumer to access, read and manage content seamlessly from one T&F interface.",
    "version": "0.1.0",
    "private": true,
    "author": "T&F Technology",
    "license": "UNLICENSED",
    "homepage": "http://confluence.taylorandfrancis.com/display/PYR",
    "repository": {
        "type": "git",
        "url":"http://bitbucket.crcpress.local:7990/scm/IN/tnf-api-dashboard.git"
    },
    "bugs": {
        "url": "http://jira.taylorandfrancis.com/projects/PB/issues"
    },
    "engines": {
        "node": ">= 4.2.1",
        "npm": ">= 3"
    },
    "scripts": {
        "build:dev": "tsc",
        "build:docker": "npm run build:prod && docker build -t angular2-webpack-start:latest .",
        "build:prod": "tsc -p ./tsconfig.server.json",
        "build": "npm run build:dev",
        "ci": "npm run lint && npm test && npm run e2e",
        "clean:dist": "npm run rimraf -- dist",
        "clean:install": "npm set progress=false && npm install",
        "clean:start": "npm start",
        "clean": "npm cache clean && npm run rimraf -- node_modules doc coverage dist",
        "docs": "npm run typedoc -- --options typedoc.json --exclude '**/*.spec.ts' ./src/",
        "lint": "npm run tslint \"src/**/*.ts\"",
        "postversion": "git push && git push --tags",
        "prebuild:dev": "npm run clean:dist",
        "prebuild:prod": "npm run clean:dist",
        "preclean:install": "npm run clean",
        "preclean:start": "npm run clean",
        "preversion": "npm test",
        "reinstall": "npm run clean && npm install",
        "rimraf": "rimraf",
        "server:node": "node dist/src/app.js",
        "server:dev": "set \"NODE_ENV=dev\" && export \"NODE_ENV=dev\" && node dist/src/app.js",
        "server:uat": "set \"NODE_ENV=uat\" && export \"NODE_ENV=uat\" && node dist/src/app.js",
        "server:prod": "set \"NODE_ENV=prod\" && export \"NODE_ENV=prod\" && node dist/src/app.js",
        "server": "npm run server:node",
        "start": "npm run server:dev",
        "start:uat": "npm run server:uat",
        "start:prod": "npm run server:prod",
        "server:local": "set \"NODE_ENV=local\" && export \"NODE_ENV=local\" && node dist/src/app.js",
        "test:coverage": "istanbul cover node_modules/mocha/bin/_mocha -- dist/test --recursive",
        "test": "set \"NODE_ENV=test\" && export \"NODE_ENV=test\" && mocha dist/test --recursive",
        "tslint": "tslint",
        "typedoc": "typedoc"
    },
    "dependencies": {
        "ajax-request": "^1.2.1",
        "body-parser": "1.14.1",
        "chai": "^3.5.0",
        "chai-http": "^3.0.0",
        "cookie-parser": "^1.4.3",
        "cors": "^2.8.1",
        "errorhandler": "1.4.2",
        "express": "4.13.3",
        "ipware": "^1.0.0",
        "istanbul": "^0.4.5",
        "jwt-simple": "^0.5.1",
        "lodash": "^4.16.6",
        "log4js": "^1.0.1",
        "method-override": "^2.3.6",
        "mocha": "^3.1.2",
        "mock-express-request": "^0.1.1",
        "mock-express-response": "^0.1.2",
        "moment":"2.18.1",
        "pg": "^6.1.0",
        "request": "^2.79.0",
        "rimraf": "^2.5.4",
        "sinon": "^1.17.6",
        "source-map-support": "^0.4.6",
        "commander": "^2.9.0"
    }
}
